<Button>
    font_size: 0.50 * self.height
    size_hint: 0.25, 0.15

<MainDisplay>:
    id: calculator
    orientation: "horizontal"
    FloatLayout:
        id: main_window
        orientation: "vertical"
        FloatLayout:
            Label:
                id: result_window
                text_size: self.width, None
                font_size: 0.75 * self.height
                pos_hint: {"y": 0.60}
                halign: "center"
                valign: "bottom"
                size_hint: 1, 0.25
                text: root.result
            Label:
                id: equation_window
                text_size: self.width, None
                size_hint: 1, 0.15
                pos_hint: {"y": 0.85}
                halign: "right"
                valign: "middle"
                text: root.equation
                font_size: 0.75 * self.height
        FloatLayout:
            Button:
                pos_hint: {"x": 0, "y": 0}
                text: "Clear"
                on_release: root.clear()
            Button:
                pos_hint: {"x": 0.25, "y": 0}
                text: "0"
                on_release: root.append_to_equation("0")
            Button:
                pos_hint: {"x": 0.50, "y": 0}
                text: "="
                on_release: root.execute()
            Button:
                pos_hint: {"x": 0.75, "y": 0}
                text: "-"
                on_release: root.append_to_equation("-")
        FloatLayout:
            Button:
                pos_hint: {"x": 0, "y": 0.15}
                text: "7"
                on_release: root.append_to_equation("7")
            Button:
                pos_hint: {"x": 0.25, "y": 0.15}
                text: "8"
                on_release: root.append_to_equation("8")
            Button:
                pos_hint: {"x": 0.50, "y": 0.15}
                text: "9"
                on_release: root.append_to_equation("9")
            Button:
                pos_hint: {"x": 0.75, "y": 0.15}
                text: "+"
                on_release: root.append_to_equation("+")
        FloatLayout:
            Button:
                pos_hint: {"x": 0, "y": 0.30}
                text: "4"
                on_release: root.append_to_equation("4")
            Button:
                pos_hint: {"x": 0.25, "y": 0.30}
                text: "5"
                on_release: root.append_to_equation("5")
            Button:
                pos_hint: {"x": 0.50, "y": 0.30}
                text: "6"
                on_release: root.append_to_equation("6")
            Button:
                pos_hint: {"x": 0.75, "y": 0.30}
                text: "/"
                on_release: root.append_to_equation("/")
        FloatLayout:
            Button:
                pos_hint: {"x": 0, "y": 0.45}
                text: "1"
                on_release: root.append_to_equation("1")
            Button:
                pos_hint: {"x": 0.25, "y": 0.45}
                text: "2"
                on_release: root.append_to_equation("2")
            Button:
                pos_hint: {"x": 0.50, "y": 0.45}
                text: "3"
                on_release: root.append_to_equation("3")
            Button:
                pos_hint: {"x": 0.75, "y": 0.45}
                text: "*"
                on_release: root.append_to_equation("*")